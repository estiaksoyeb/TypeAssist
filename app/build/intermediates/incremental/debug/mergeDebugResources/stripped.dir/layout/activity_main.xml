<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F3F4F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtErrorLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Errors"
            android:textColor="#FFFFFF"
            android:background="#EF4444"
            android:padding="10dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/pageHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#4F46E5"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="40dp"
                android:paddingBottom="60dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TypeAssist"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI Power for your keyboard"
                    android:textSize="16sp"
                    android:textColor="#E0E7FF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="-40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_white"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Master Switch"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#111827"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enable/Disable App"
                            android:textSize="13sp"
                            android:textColor="#6B7280"/>
                    </LinearLayout>
                    <Switch
                        android:id="@+id/switchServiceActive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnSysPermission"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Enable Accessibility"
                    android:backgroundTint="#111827"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="20dp"/>

                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu" 
                    android:textStyle="bold" 
                    android:textColor="#6B7280" 
                    android:layout_marginBottom="8dp"/>

                <LinearLayout 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:orientation="horizontal" 
                    android:layout_marginBottom="10dp">
                    <Button
                        android:id="@+id/navCommands"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        android:text="Commands"
                        android:backgroundTint="#FFFFFF"
                        android:textColor="#4F46E5"
                        android:layout_marginEnd="5dp"
                        android:elevation="4dp"/>
                    <Button
                        android:id="@+id/navSettings"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        android:text="API Setup"
                        android:backgroundTint="#FFFFFF"
                        android:textColor="#4F46E5"
                        android:layout_marginStart="5dp"
                        android:elevation="4dp"/>
                </LinearLayout>

                <LinearLayout 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/navJson"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        android:text="Backup"
                        android:backgroundTint="#FFFFFF"
                        android:textColor="#6B7280"
                        android:layout_marginEnd="5dp"
                        android:elevation="4dp"/>
                    <Button
                        android:id="@+id/navTest"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        android:text="Test Lab"
                        android:backgroundTint="#10B981"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="5dp"
                        android:elevation="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pageCommands"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone">

            <TextView 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:text="Edit Commands" 
                android:textSize="24sp" 
                android:textStyle="bold" 
                android:textColor="#111827" 
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:id="@+id/listCommandsInternal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/bg_card_white"
                android:layout_marginBottom="20dp"/>

            <EditText 
                android:id="@+id/etTrigger" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:hint="Trigger (e.g. @fix)" 
                android:background="@drawable/bg_card_white" 
                android:padding="15dp" 
                android:layout_marginBottom="10dp"/>
            
            <EditText 
                android:id="@+id/etPrompt" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:hint="Instruction Prompt" 
                android:background="@drawable/bg_card_white" 
                android:padding="15dp" 
                android:minLines="3" 
                android:gravity="top" 
                android:layout_marginBottom="20dp"/>

            <LinearLayout 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:orientation="horizontal">
                <Button android:id="@+id/btnDeleteCmd" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Delete" android:backgroundTint="#EF4444" android:layout_marginEnd="5dp"/>
                <Button android:id="@+id/btnSaveCmd" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Save" android:backgroundTint="#4F46E5" android:layout_marginStart="5dp"/>
            </LinearLayout>
            <Button android:id="@+id/btnBackFromCmd" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Back" android:backgroundTint="#6B7280" android:layout_marginTop="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pageSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone">

            <TextView 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:text="API Setup" 
                android:textSize="24sp" 
                android:textStyle="bold" 
                android:textColor="#111827" 
                android:layout_marginBottom="20dp"/>

            <EditText 
                android:id="@+id/etApiKey" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:hint="API Key" 
                android:background="@drawable/bg_card_white" 
                android:padding="15dp" 
                android:layout_marginBottom="15dp"/>
            
            <EditText 
                android:id="@+id/etModel" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:hint="Model" 
                android:background="@drawable/bg_card_white" 
                android:padding="15dp" 
                android:layout_marginBottom="15dp"/>

            <LinearLayout 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:orientation="horizontal">
                <EditText android:id="@+id/etTemp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:hint="Temp (0.2)" android:background="@drawable/bg_card_white" android:padding="15dp" android:layout_marginEnd="5dp"/>
                <EditText android:id="@+id/etTopP" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:hint="Top P (0.95)" android:background="@drawable/bg_card_white" android:padding="15dp" android:layout_marginStart="5dp"/>
            </LinearLayout>

            <Button android:id="@+id/btnSaveSettings" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Save &amp; Verify" android:backgroundTint="#4F46E5" android:layout_marginTop="30dp"/>
            <Button android:id="@+id/btnBackFromSettings" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Back" android:backgroundTint="#6B7280" android:layout_marginTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pageJson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone">

            <TextView 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:text="Backup" 
                android:textSize="24sp" 
                android:textStyle="bold" 
                android:textColor="#111827" 
                android:layout_marginBottom="20dp"/>

            <EditText 
                android:id="@+id/etJsonRaw" 
                android:layout_width="match_parent" 
                android:layout_height="350dp" 
                android:gravity="top" 
                android:background="@drawable/bg_card_white" 
                android:padding="15dp" 
                android:textSize="12sp" 
                android:typeface="monospace" 
                android:layout_marginBottom="15dp"/>

            <LinearLayout 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:orientation="horizontal">
                <Button android:id="@+id/btnCopyJson" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Copy" android:backgroundTint="#6B7280" android:layout_marginEnd="5dp"/>
                <Button android:id="@+id/btnSaveJson" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Apply" android:backgroundTint="#4F46E5" android:layout_marginStart="5dp"/>
            </LinearLayout>
            <Button android:id="@+id/btnBackFromJson" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Back" android:backgroundTint="#6B7280" android:layout_marginTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pageTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone">

            <TextView 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:text="Test Lab" 
                android:textSize="24sp" 
                android:textStyle="bold" 
                android:textColor="#10B981" 
                android:layout_marginBottom="20dp"/>
            
            <EditText 
                android:id="@+id/etTestField" 
                android:layout_width="match_parent" 
                android:layout_height="250dp" 
                android:hint="Type here..." 
                android:background="@drawable/bg_card_white" 
                android:gravity="top" 
                android:padding="15dp" 
                android:layout_marginBottom="20dp"/>
            
            <Button android:id="@+id/btnBackFromTest" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Close" android:backgroundTint="#111827"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
